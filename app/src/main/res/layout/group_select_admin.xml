<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_select_adminFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_name_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group_name_admin"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="326dp">

            <LinearLayout
                android:id="@+id/group_ListStudents_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/group_Add_Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:text="Add Student" />

        <Button
            android:id="@+id/group_Remove_Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:text="Remove Student" />

        <Button
            android:id="@+id/group_Delete_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Group" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/group_admin_backbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>