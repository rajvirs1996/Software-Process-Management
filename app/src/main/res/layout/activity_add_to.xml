<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.edu.uow.e_planner_and_communication_system.Activity.addTo">

    <TextView
        android:id="@+id/add_to_towhere_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="44dp"
        android:text="Choice:" />

    <Spinner
        android:id="@+id/add_to_spinner_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_to_towhere_text"
        android:layout_toEndOf="@+id/add_to_towhere_text" />

    <TextView
        android:id="@+id/add_to_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_to_towhere_text"
        android:layout_below="@+id/add_to_spinner_1" />

    <Spinner
        android:id="@+id/add_to_spinner_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_to_choice"
        android:layout_toEndOf="@+id/add_to_choice" />

</RelativeLayout>
